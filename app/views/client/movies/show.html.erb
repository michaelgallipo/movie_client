<h2><%= @movie["title"] %></h2>
<h3>Genre: <%= @movie["genre"] %></h3>
<p>Year: <%= @movie["year"] %><br>
<img src="<%=@movie["art_url"] %>" style="width:150px;height:225px;">
<br>
<h2>Cast</h2>
<ul>
<% @movie["actors"].each do |actor| %>
<li><%= actor["full_name"] %></li>
<% end %></ul>
<br><br>
<a href="/client/movies/new">Add Movie</a>
<a href="/client/movies/<%= @movie['id'] %>/edit">Edit Movie</a>
<a href="/client/movies/<%= @movie['id'] %>" data-method="delete">Delete Movie</a>
<a href="/client/movies">Return to Index</a>